{#
  For each job opening you have to list the title and the name of the file under
  pages/jobs that contains the job description.
#}

{% block head %}
  <style>
    #tabs-openings .ui-tabs-nav-vertical
    {
      font-size: 16px;
    }
  </style>
{% endblock %}

{% set GREENHOUSE = 1 %}
{% set TALENTTRACKER = 2 %}
{% set EMAIL = 3 %}

